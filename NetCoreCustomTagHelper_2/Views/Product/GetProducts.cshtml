@model List<Product>

<table class="table table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Urun ismi</th>
            <th>Fiyatı</th>
            <th>Kategorisi</th>
        </tr>
    </thead>

    <tbody>
        @foreach (Product item in Model)
        {
            <tr>
                <td>@item.ProductId</td>
                <td>@item.ProductName</td>
                <td>@item.UnitPrice</td>
                @if (item.CategoryId == null)
                {
                    <td>Kategorisi yok</td>
                }
                else
                {
                    <td>@item.Category.CategoryName</td>
                }
            </tr>
        }
    </tbody>
</table>